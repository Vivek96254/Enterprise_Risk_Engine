# Enterprise Risk Engine Environment Configuration

# Server Configuration
PORT=8080
ENVIRONMENT=development
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@localhost:5432/risk_engine?sslmode=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_STREAM_NAME=transactions
REDIS_CONSUMER_GROUP=scoring-workers
REDIS_MAX_RETRIES=3

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRATION=24h

# Worker Configuration
WORKER_CONCURRENCY=5
WORKER_BATCH_SIZE=100
WORKER_POLL_INTERVAL=100ms
WORKER_RETRY_ATTEMPTS=3
DEAD_LETTER_STREAM=transactions-dlq

# Render.com Configuration (for deployment)
# These will be automatically set by Render
# DATABASE_URL=<provided-by-render>
# REDIS_URL=<provided-by-render>
